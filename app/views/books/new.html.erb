<h1>Create New Book</h1>

<%= form_for @book do |f| %>
    <p>
	<%= f.label :title, "Title:" %>
	<%= f.text_field :title %>

    </p>
    <p>
	<%= f.fields_for :author do |ff| %>
	    <%= ff.label :name, "Author Name:" %>
	    <%= ff.text_field :name %>
	<% end %>
    </p>
    <p>
	<%= f.submit %>
    </p>
<% end %>